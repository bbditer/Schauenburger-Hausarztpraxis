<div id="content" style="border-top: 1px solid #0060AA;">
    <div class="mainparagraph">
        <h1>{{ title }}</h1>

        <div id="admin_menu">
            <ul>
                <li>Aktuelles</li>
                <li id="test"></li>
            </ul>
        </div>

        <!-- Aktuelle -->
        <form action="/admin/submit" method="post">
            {{#each news_data}}
                <div>
                    <label class="label" for="news_headline">Überschrift</label>
                    <textarea class="input_field" id="news_headline" name="news_headline">{{ headline }}</textarea>
                </div>
                <div>
                    <label class="label" for="news_item">Text</label>
                    <textarea class="editor input_field" id="news_item" name="news_item">{{{ entry }}}</textarea>
                </div>
            {{/each}}
            
            <div id="opening_times">
                <table>
                    <tr>
                        <th colspan="5">
                            Öffnungszeiten
                        </th>
                    </tr>
                    <tr>
                        {{#each opening_data.entries_opening}}
                        <td>
                            {{ day }}
                        </td>
                        {{/each}}
                    </tr>
                    <tr>
                        {{#each opening_data.entries_opening}}
                        <td>
                            <textarea class="input_field" id="opening_item1{{ id }}" name="opening_item1{{ id }}">{{ times1 }}</textarea>
                        </td>
                        {{/each}}
                    </tr>
                    <tr>
                        {{#each opening_data.entries_opening}}
                        <td>
                            <textarea class="input_field" id="opening_item2{{ id }}" name="opening_item2{{ id }}">{{ times2 }}</textarea>
                        </td>
                        {{/each}}
                    </tr>
                </table>

                <table>
                    <tr>
                        <th colspan="5">
                            Sprechzeiten
                        </th>
                    </tr>
                    <tr>
                        {{#each opening_data.entries_surgery}}
                        <td>
                            {{ day }}
                        </td>
                        {{/each}}
                    </tr>
                    <tr>
                        {{#each opening_data.entries_surgery}}
                        <td>
                            <textarea class="input_field" id="surgery_item1{{ id }}" name="surgery_item1{{ id }}">{{ times1 }}</textarea>
                        </td>
                        {{/each}}
                    </tr>
                    <tr>
                        {{#each opening_data.entries_surgery}}
                        <td>
                            <textarea class="input_field" id="surgery_item2{{ id }}" name="surgery_item2{{ id }}">{{ times2 }}</textarea>
                        </td>
                        {{/each}}
                    </tr>
                </table>
            </div>

            <button class="submit_button" type="submit">Speichern</button>
        </form>

    </div>
    <span class="end"></span>
</div>