<div id="menu" class="{{ menu_active }}">
    <div class="mobile handle">
        Menu
        <div class="button">
            <span class="color"></span>
            <span></span>
            <span class="color"></span>
            <span></span>
            <span class="color"></span>
        </div>
    </div>

    <ul>
        {{#each menu.entries}}
            <li {{#if class}}class="{{ class }}"{{/if}}>
                <a class="{{ path }}" href="{{ href }}">
                    <p>{{ title }}</p>
                </a>

                {{#if sub_items}}
                    <ul class="submenu">
                        {{#each sub_items}}
                            <li>
                                <a class="{{ path }}" href="{{ href }}">
                                    <p>{{ title }}</p>
                                </a>
                            </li>
                        {{/each}}
                        <span class="end"></span>
                    </ul>
                {{/if}}
            </li>
        {{/each}}
    </ul>
</div>

<div id="content">
    <h1>{{ services.headline }}</h1>

    <div class="mainparagraph only_text">
        {{#if services.subheadline}}
            <h3 class="first">{{ services.subheadline }}</h3>
        {{/if}}
        <span class="column">
            <ul style="list-style-type: square; padding-left: 17px;">
                {{#each services.list_items}}
                    <li>{{ item }}</li>
                {{/each}}
            </ul>
        </span>
    </div>
    <span class="end"></span>
</div>